<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BindingTester; assembly=BindingTester"
             x:Class="BindingTester.Page1">
  <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
    <local:BindingTestObject HorizontalOptions="FillAndExpand" BackgroundColor ="Green" BlahString="{Binding BlahReceiver, Mode=TwoWay}">
    </local:BindingTestObject> 
    <local:BindingTestObject.BindingContext>
      <local:BindingTestController/>
    </local:BindingTestObject.BindingContext>
    <Entry HorizontalOptions="FillAndExpand" Text="{Binding BlahReceiver, Mode=TwoWay}"></Entry>
    <Entry.BindingContext>
      <local:BindingTestController/>
    </Entry.BindingContext>
    <Label Text="{Binding BlahReceiver}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="Aqua" TextColor="Black" />
    <Label.BindingContext>
      <local:BindingTestController/>
    </Label.BindingContext>
  </StackLayout>
  
</ContentPage>